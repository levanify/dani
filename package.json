{
  "name": "dani-api",
  "version": "1.0.0",
  "private": true,
  "description": "Simple Express TypeScript API for Render",
  "main": "dist/server.js",
  "engines": {
    "node": ">=20 <21"
  },
  "scripts": {
    "dev": "prisma migrate deploy && tsx --env-file=.env src/server.ts",
    "dev:watch": "prisma migrate deploy && tsx watch --env-file=.env src/server.ts",
    "build": "prisma generate && tsc -p tsconfig.json",
    "start": "prisma migrate deploy && node dist/server.js",
    "test": "vitest run",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/engines",
      "prisma"
    ]
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "express": "^5.2.1",
    "openai": "^6.22.0",
    "pg": "^8.18.0",
    "sanitize-html": "^2.17.1",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.3.0",
    "@types/pg": "^8.16.0",
    "@types/sanitize-html": "^2.16.0",
    "@types/supertest": "^6.0.3",
    "dotenv": "^17.3.1",
    "prisma": "^7.4.0",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
