generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                    String  @id @default(uuid())
  telegramHandle        String  @unique @map("telegram_handle")
  lastOpenaiResponseId  String? @map("last_openai_response_id")

  @@map("users")
}
